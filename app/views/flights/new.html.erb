<div class="row justify-content-center">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-header"><h2>Create Flight</h2></div>
      <div class="card-body">
        <%=form_for @flight do |f|%>
          <div class="field form-group">
            <div class="row">
              <div class="col-sm-4">
                <%=f.label 'name' %>:
              </div>
              <div class="col-sm-8">
                <%=f.text_field :name , class: "form-control"  %>
              </div>
            </div>
          </div>
          <div class="field form-group">
            <div class="row">
              <div class="col-sm-4">
                <%=f.label 'Origin' %>:
              </div>
              <div class="col-sm-8">
                <%=f.text_field :origin , class: "form-control" %><br>
              </div>
            </div>
          </div>
          <div class="field form-group">
            <div class="row">
              <div class="col-sm-4">
                <%=f.label 'Destination'%>:
              </div>
              <div class="col-sm-8">
                <%=f.text_field :destination , class: "form-control"%>
              </div>
            </div>
          </div>
          <div class="field form-group">
            <div class="row">
              <div class="col-sm-4">      
                <%=f.label 'Seats'%>:
              </div>
              <div class="col-sm-8">
                <%=f.text_field :seats , class: "form-control"%>
              </div>
            </div>
          </div>
          <div class="field form-group">
            <div class="row">
              <div class="col-sm-4">    
                <%=f.label 'Pnr_Number'%>:
              </div>
              <div class="col-sm-8">
                <%=f.text_field :pnr_number , class: "form-control"%>
              </div>
            </div>
          </div>
          <div>
            <%= link_to_add_association "Add seating_configuration", f, :seatings %> 
          </div>
            
          <div class="field form-group">
            <div class="row justify-content-md-center">
                <%= f.submit %>
            </div>
          </div>
      <%end%>
    </div>
  </div>
</div>
  

<%=link_to 'Back',root_path%>
 <%= link_to "Log out", destroy_user_session_path, method: "delete" %>