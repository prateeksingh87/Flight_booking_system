<% if user_signed_in? %>
    <% if current_user.has_role? :admin %>
      <div class="card" style="width: 10rem;margin-left: 500px;">
        <div class="card-body">
          <a href="/flights/new" class="btn btn-secondary">Create flight</a>
        </div>
      </div>
      <nav class="navbar navbar-light bg-light" style="margin-top: -130px;">
        
        <%= link_to "Logout", destroy_user_session_path, method: :delete, style: 'margin-left: 1500px;'  %>
      </nav>
    <% else %>
      Logged in as <strong><%= current_user.email %></strong>.
      <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
    <% end %>
<% else %>
  <div class="card" style="width: 18rem;margin-left: 500px;">
    <div class="card-body">
      <a href="<%= flights_path %>" class="btn btn-secondary">Book a flight</a>
      <a href="<%= new_user_session_path %>" class="btn btn-primary" style="margin-left: 12px;">Admin login</a>
    </div>
  </div>
<% end %>
